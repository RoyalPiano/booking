<resources>
    <!-- Base application theme. -->
    <style name="Theme.BookingApp" parent="BaseBookingTheme">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryDarkColor</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColor</item>
        <item name="colorOnPrimary">@color/primaryTextColor</item>
        <item name="colorOnBackground">@color/primaryLightColor</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">?colorPrimary</item>
        <item name="colorSecondaryVariant">@color/primaryDarkColor</item>
        <item name="colorOnSecondary">@color/secondaryTextColor</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="BaseBookingTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="screenPaddingVertical">16dp</item>
        <item name="screenPaddingHorizontal">16dp</item>
        <item name="listPreferredItemPaddingVertical">8dp</item>
        <item name="listPreferredItemSpacingVertical">16dp</item>
        <item name="listPreferredItemPaddingStart">16dp</item>
        <item name="listPreferredItemPaddingEnd">16dp</item>
        <item name="gridPreferredItemSpacingHorizontal">8dp</item>
        <item name="verticalSpacing">8dp</item>
        <item name="horizontalSpacing">20dp</item>
        <item name="marginDate">1dp</item>
        <item name="textInputStyle">@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense</item>
    </style>
</resources>