<resources>
    <!-- Base application theme. -->
    <style name="Theme.BookingApp" parent="BaseBookingTheme">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColor</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryDarkColor</item>
        <item name="colorOnSecondary">@color/secondaryLightColor</item>
        <item name="android:textColorSecondary">@color/secondaryTextColor</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="BaseBookingTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="screenPaddingVertical">16dp</item>
        <item name="screenPaddingHorizontal">16dp</item>
        <item name="listPreferredItemPaddingVertical">8dp</item>
        <item name="listPreferredItemSpacingVertical">16dp</item>
        <item name="listPreferredItemPaddingStart">16dp</item>
        <item name="listPreferredItemPaddingEnd">16dp</item>
        <item name="gridPreferredItemSpacingHorizontal">8dp</item>
        <item name="verticalSpacing">8dp</item>
        <item name="horizontalSpacing">20dp</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:backgroundTint">?colorSecondary</item>
        <item name="android:textAppearance">?textAppearanceBody1</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="LoginButtonStyle">
        <item name="android:backgroundTint">?colorSecondaryVariant</item>
        <item name="android:textAppearance">?textAppearanceBody1</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AuthAppNameStyle">
        <item name="android:paddingStart">?screenPaddingVertical</item>
        <item name="android:textAppearance">?textAppearanceHeadline4</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>