<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Вертикальный отступ в элементах списка -->
    <attr name="listPreferredItemPaddingVertical" format="dimension|reference"/>
    <!-- Вертикальный отступ между элементами списка -->
    <attr name="listPreferredItemSpacingVertical" format="dimension|reference"/>
    <!-- Горизонтальный отступ между колонками списка -->
    <attr name="gridPreferredItemSpacingHorizontal" format="dimension|reference"/>
    <!-- Вертикальный отступ между элементами контента (пример: между полями ввода) -->
    <attr name="verticalSpacing" format="dimension|reference"/>
    <!-- Вертикальный отступ внутри контентной области (пример: отступ от низа экрана) -->
    <attr name="screenPaddingVertical" format="dimension|reference"/>
    <!-- Горизонтальный отступ внутри контентной области (отступы слева и справа) -->
    <attr name="screenPaddingHorizontal" format="dimension|reference"/>
    <!-- Горизонтальный отступ между элементами контента (пример: между кнопками) -->
    <attr name="horizontalSpacing" format="dimension|reference"/>
    <!--  -->
    <attr name="marginDate" format="dimension|reference"/>

</resources>