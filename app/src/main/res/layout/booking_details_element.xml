<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <com.google.android.material.card.MaterialCardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="?listPreferredItemSpacingVertical"
    >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingVertical="?listPreferredItemPaddingVertical"
            android:paddingStart="?listPreferredItemPaddingStart"
            android:paddingEnd="?listPreferredItemPaddingEnd">
            <TextView
                android:id="@+id/block_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?textAppearanceHeadline5"
                android:gravity="bottom"
                tools:text="Название блока"/>
            <TextView
                android:id="@+id/block_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?textAppearanceBody1"
                tools:text="Значение блока"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</layout>