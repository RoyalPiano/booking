<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="?screenPaddingHorizontal"
    android:paddingVertical="?screenPaddingVertical"
    tools:context=".app.fragments.booking.BookingFragment">

    <TextView
        android:id="@+id/booking_details_fragment_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/booking_details_fragment_title"
        android:textAppearance="?textAppearanceHeadline4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/booking_company_block_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="?verticalSpacing"
        android:text="@string/company"
        android:textAppearance="?textAppearanceHeadline5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/booking_details_fragment_title" />

    <TextView
        android:id="@+id/booking_company_block_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAppearance="?textAppearanceBody1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/booking_company_block_title"
        tools:text="Тензор" />

    <TextView
        android:id="@+id/booking_place_block_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="?verticalSpacing"
        android:text="@string/place"
        android:textAppearance="?textAppearanceHeadline5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/booking_company_block_text" />

    <TextView
        android:id="@+id/booking_place_block_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAppearance="?textAppearanceBody1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/booking_place_block_title"
        tools:text="Переговорная Гавайи (3 этаж)" />

    <TextView
        android:id="@+id/booking_datetime_block_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="?verticalSpacing"
        android:text="@string/data_and_time"
        android:textAppearance="?textAppearanceHeadline5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/booking_place_block_text" />

    <TextView
        android:id="@+id/booking_datetime_block_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAppearance="?textAppearanceBody1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/booking_datetime_block_title"
        tools:text="26.09 - ЧТ; 11:00-13:00" />

    <TextView
        android:id="@+id/booking_theme_block_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="?verticalSpacing"
        android:text="@string/booking_name"
        android:textAppearance="?textAppearanceHeadline5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/booking_datetime_block_text" />

    <!-- TODO #50 -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/booking_theme_block_input_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="?verticalSpacing"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/booking_theme_block_title">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/booking_theme_block_input_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="@string/insert_booking_name_here"
            android:inputType="textAutoComplete" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/cancel_booking_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/cancel_booking"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/confirm_booking_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="?horizontalSpacing"
        android:clickable="false"
        android:enabled="false"
        android:text="@string/confirm_booking_confirm"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/cancel_booking_button" />

</androidx.constraintlayout.widget.ConstraintLayout>